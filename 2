#include <stdio.h>
#include <stdlib.h>



int n,digito,soma=0;
int main(){
  

  scanf("%d",&n);

  if(n%2==0){
    printf("%d eh par\n", n); 
  }
  else{
    printf("%d eh impar\n", n);
  }

  int nOriginal = n;
  
  
  while (n != 0) {
      
        digito = n % 10; 
        soma += digito;       
        n /= 10;  
      
                    }
         
    
  
  printf("A soma dos algarismos de %d eh %d\n", nOriginal,soma);

  
  
  return 0;
}
